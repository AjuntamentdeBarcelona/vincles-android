<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorWhite</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:textViewStyle">@style/VinclesTextViewStyle</item>

    </style>

    <style name="VinclesTextViewStyle" parent="android:Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DialogsTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DrawerTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:listDivider">@color/drawer_divider_color</item>
    </style>

    <style name="NavDrawerRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerRowText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/drawer_selection_color</item>
    </style>

    <style name="NavDrawerRowItemIcon">
        <item name="android:color">@color/drawer_selection_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
    </style>

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/akkurat</item>
        <item name="android:textSize">@dimen/toolbar_help_text_size</item>
    </style>

    <style name="AkkuratTextAppearance">
        <item name="android:fontFamily">@font/akkurat</item>
    </style>

</resources>
