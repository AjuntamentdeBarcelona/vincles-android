<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_square_gray_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/start_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkurat_bold"
                android:text="@string/calendar_date_start_time"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/calendar_text_size"/>

            <TextView
                android:id="@+id/start_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkurat_bold"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="1 gen 2018 2:35"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calendar_text_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/length_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_square_gray_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/length_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkurat_bold"
                android:text="@string/calendar_date_length"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/calendar_text_size"/>

            <TextView
                android:id="@+id/length_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akkurat_bold"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="1 hora"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calendar_text_size" />


        </LinearLayout>

    </LinearLayout>


</merge>
