<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_element_alert_height"
    android:layout_marginTop="@dimen/chat_element_alert_margin"
    android:layout_marginBottom="@dimen/chat_element_alert_margin"
    android:background="@drawable/chat_alert_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/contacts_text_size"
        tools:text="@string/see_all_contacts" />


</LinearLayout>



