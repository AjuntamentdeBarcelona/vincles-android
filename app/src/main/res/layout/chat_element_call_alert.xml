<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/chat_element_alert_margin"
    android:layout_marginBottom="@dimen/chat_element_alert_margin"
    android:background="@drawable/chat_alert_background">

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/chat_element_call_side_margin"
        android:layout_marginRight="@dimen/chat_element_call_side_margin">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/chat_element_call_avatar_size"
            android:layout_height="@dimen/chat_element_call_avatar_size"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/contact_name"
            android:layout_marginLeft="@dimen/chat_element_message_margin_start"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/chat_element_message_margin_start"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/contacts_text_size"
            tools:text="@string/see_all_contacts" />


    </LinearLayout>

</FrameLayout>





