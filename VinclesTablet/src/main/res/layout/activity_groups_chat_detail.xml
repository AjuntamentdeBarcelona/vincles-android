<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/menuOperation"
        android:name="cat.bcn.vincles.tablet.fragment.MenuOperationFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout="@layout/menu_operation_fragment"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_large"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonLayout"
            android:background="@drawable/item_background_list"
            >

            <LinearLayout
                android:id="@+id/header_groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgUser"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/fondo_claro"
                    android:src="@drawable/user"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/padding_medium"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    >

                    <cat.bcn.vincles.lib.widget.AkkuratTextView
                        android:id="@+id/texUserName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:textSize="@dimen/text_size_main"
                        android:textColor="?bar_title"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:id="@+id/btnClose"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:onClick="goClose"
                        android:layout_margin="@dimen/padding_xlarge"
                        style="?my_button_black"
                        >
                        <cat.bcn.vincles.lib.widget.TintableImageView
                            android:layout_width="@dimen/configure_button_confirm_imagesize"
                            android:layout_height="@dimen/task_network_button_heigh"
                            android:tint="@color/white"
                            android:padding="@dimen/padding_medium"
                            android:src="@drawable/ic_no_x_30dp"
                            />
                        <cat.bcn.vincles.lib.widget.AkkuratTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/padding_medium"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_main"
                            android:textAllCaps="false"
                            android:text="@string/task_groups_close"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/header_groups"
                android:background="@color/fondo_panel_claro"
                />

            <RelativeLayout
                android:id="@+id/messagesLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_below="@+id/header_groups"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/chatButtons"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:padding="@dimen/padding_large"
                    >

                    <!-- JUST TO NOT CRASH WHEN TRY TO FIND IT -->
                    <cat.bcn.vincles.lib.widget.AkkuratTextView
                        android:id="@+id/texMessageTime"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        />
                    <cat.bcn.vincles.lib.widget.AkkuratTextView
                        android:id="@+id/texMessageDay"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_xxlarge"
                        android:layout_marginRight="@dimen/padding_xxlarge"
                        android:layout_marginBottom="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_xxlarge"
                        android:paddingLeft="@dimen/padding_xxlarge"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_text"
                            android:visibility="visible"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/layout_images"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:id="@+id/frame_img1"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    >
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/img1"
                                        android:src="@drawable/bright_photo"
                                        android:scaleType="fitStart"
                                        android:adjustViewBounds="true"
                                        android:visibility="visible" />
                                    <ProgressBar
                                        android:id="@+id/prog_bar_img1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:visibility="visible"
                                        />
                                </FrameLayout>
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:id="@+id/frame_img2"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/padding_small"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    >
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:id="@+id/img2"
                                        android:src="@drawable/bright_photo"
                                        android:scaleType="fitCenter"
                                        android:adjustViewBounds="true"
                                        android:visibility="visible" />
                                    <ProgressBar
                                        android:id="@+id/prog_bar_img2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:visibility="visible"
                                        />
                                </FrameLayout>
                            </LinearLayout>
                            <cat.bcn.vincles.lib.widget.AkkuratTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/padding_medium"
                                android:layout_weight="1"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                android:text="{description}"
                                android:id="@+id/texTypeText"
                                android:gravity="left|top"
                                android:visibility="visible"
                                />
                        </LinearLayout>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:id="@+id/imgTypeImage"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:visibility="gone" />

                        <VideoView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/video"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:visibility="gone"
                            />
                        <ProgressBar
                            android:id="@+id/prog_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:visibility="gone"
                            />

                        <cat.bcn.vincles.lib.widget.TintableImageView
                            android:id="@+id/imgPlay"
                            android:src="@drawable/play"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:visibility="gone"
                            android:tint="@color/white"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_network_button_heigh"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            >

            <LinearLayout
                android:id="@+id/btnTaskCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="goGroups"
                style="?my_button_grey"
                >
                <!--android:layout_width="@dimen/configure_button_confirm_imagesize"-->
                <cat.bcn.vincles.lib.widget.TintableImageView
                    android:layout_width="@dimen/configure_button_confirm_imagesize"
                    android:layout_height="@dimen/task_network_button_heigh"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/icon_grups"
                    />
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/padding_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_main"
                    android:textAllCaps="false"
                    android:text="@string/task_groups_viewgroups"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnTaskOK"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:onClick="goDinamizerChat"
                android:layout_marginLeft="@dimen/padding_xlarge"
                style="?my_button_grey"
                >
                <cat.bcn.vincles.lib.widget.TintableImageView
                    android:layout_width="@dimen/configure_button_confirm_imagesize"
                    android:layout_height="@dimen/task_network_button_heigh"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/icon_user"
                    />
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/padding_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_main"
                    android:textAllCaps="false"
                    android:text="@string/task_groups_groupcoordinator"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/menu_button_size"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:textColorSecondary"
        android:padding="@dimen/padding_small"
        android:gravity="center_vertical|center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="@dimen/padding_small"
            android:clickable="true"
            android:onClick="createChat"
            style="?my_button_red"
            android:padding="@dimen/padding_small"
            >
            <cat.bcn.vincles.lib.widget.TintableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mensajes_24_dp"
                android:tint="@color/white"
                android:clickable="false"
                />
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:paddingTop="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="false"
                android:text="@string/task_groups_sendmessage"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_take"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="takePhoto"
            android:background="@drawable/my_btn_rojo"
            android:padding="@dimen/padding_small"

            >
            <cat.bcn.vincles.lib.widget.TintableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fotos_xx_dp"
                android:tint="@color/white"
                android:clickable="false"
                />
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:paddingTop="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="false"
                android:text="@string/task_gallery_new_photo"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>