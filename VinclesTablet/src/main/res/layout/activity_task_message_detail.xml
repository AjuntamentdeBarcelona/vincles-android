<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/menuOperation"
        android:name="cat.bcn.vincles.tablet.fragment.MenuOperationFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout="@layout/menu_operation_fragment" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_medium"
        android:layout_marginTop="@dimen/padding_medium">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUser"
                android:src="@drawable/user"
                app:civ_border_width="3dp"
                app:civ_border_color="?android:textColorSecondary"
                android:layout_margin="@dimen/padding_medium"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/texUserName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_small" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right">

                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:id="@+id/texMessageDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="right"
                    android:text="{day}"
                    android:textAlignment="gravity" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_small"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">
                    <cat.bcn.vincles.lib.widget.TintableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        style="?tint_reloj"
                        android:src="@drawable/ic_reloj_24dp"/>
                    <cat.bcn.vincles.lib.widget.AkkuratTextView
                        android:layout_marginLeft="@dimen/padding_small"
                        android:id="@+id/texMessageTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="20:30"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_xxlarge"
            android:layout_marginRight="@dimen/padding_xxlarge"
            android:layout_marginBottom="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_xxlarge"
            android:paddingLeft="@dimen/padding_xxlarge"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_text"
                android:visibility="visible"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/layout_images"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/frame_img1"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal|center_vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/img1"
                            android:src="@drawable/bright_photo"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="visible"
                            />
                        <ProgressBar
                            android:id="@+id/prog_bar_img1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:visibility="visible"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/frame_img2"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_gravity="center_horizontal|center_vertical"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/img2"
                            android:src="@drawable/bright_photo"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="visible"
                            />
                        <ProgressBar
                            android:id="@+id/prog_bar_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:visibility="visible"
                            />
                    </FrameLayout>
                </LinearLayout>
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:text="{description}"
                    android:id="@+id/texTypeText"
                    android:gravity="left|top"
                    android:visibility="visible"
                    android:layout_weight="1" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:id="@+id/imgTypeImage"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone" />

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                />
            <ProgressBar
                android:id="@+id/prog_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                />

            <cat.bcn.vincles.lib.widget.TintableImageView
                android:id="@+id/imgPlay"
                android:src="@drawable/play"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                android:tint="@color/white"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_network_button_heigh"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:layout_margin="@dimen/padding_medium"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:onClick="goBack"
                android:background="@drawable/my_btn_gris"
                >
                <cat.bcn.vincles.lib.widget.TintableImageView
                    android:layout_width="@dimen/configure_button_confirm_imagesize"
                    android:layout_height="@dimen/task_network_button_heigh"
                    android:tint="@color/white"
                    android:src="@drawable/ic_reply_black_24dp"
                    />
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:paddingLeft="@dimen/padding_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:clickable="false"
                    android:text="@string/message_back"
                    style="@style/button_main_text_button"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linReplay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:onClick="replayMessage"
                android:layout_marginLeft="@dimen/padding_large"
                style="?my_button_red"
                >
                <cat.bcn.vincles.lib.widget.TintableImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mensajes_24_dp"
                    android:tint="@color/white"
                    android:clickable="false"
                    />
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:paddingLeft="@dimen/padding_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:clickable="false"
                    android:text="@string/task_message_detail_button_replay"
                    style="@style/button_main_text_button"
                    />
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/layout_texto_up_down"
                android:paddingBottom="@dimen/padding_medium"
                android:orientation="vertical"
                android:visibility="visible"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_prev"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding_small"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:clickable="true"
                    android:onClick="prevResource"
                    android:background="@drawable/my_btn_gris"
                    android:padding="@dimen/padding_small"

                    >
                    <cat.bcn.vincles.lib.widget.TintableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_flecha_up"
                        android:tint="@color/white"
                        android:clickable="false"
                        />
                    <cat.bcn.vincles.lib.widget.AkkuratTextView
                        android:paddingTop="@dimen/padding_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:clickable="false"
                        android:text="@string/task_message_detail_prev"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_next"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/padding_small"
                    android:orientation="vertical"
                    android:gravity="center_vertical|center_horizontal"
                    android:clickable="true"
                    android:onClick="nextResource"
                    android:background="@drawable/my_btn_gris"
                    android:padding="@dimen/padding_small"
                    >
                    <cat.bcn.vincles.lib.widget.AkkuratTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:clickable="false"
                        android:text="@string/task_message_detail_next"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        />
                    <cat.bcn.vincles.lib.widget.TintableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/white"
                        android:paddingTop="@dimen/padding_small"
                        android:src="@drawable/icon_flecha_down"
                        android:clickable="false"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>