<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_background_list"
        android:padding="@dimen/padding_large"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/layout_bubble"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_toLeftOf="@+id/item_message_photo_layout_mine"
                android:layout_toRightOf="@+id/item_message_photo_layout"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <cat.bcn.vincles.lib.widget.TintableImageView
                            android:id="@+id/item_message_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:tint="@color/red"
                            android:layout_marginRight="@dimen/padding_medium"
                            android:layout_marginBottom="@dimen/padding_medium"
                            android:src="@drawable/ic_reloj_24dp"
                            />

                        <cat.bcn.vincles.lib.widget.AkkuratTextView
                            android:id="@+id/texTimeFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            style="@style/TextDefault"
                            android:textSize="@dimen/text_size_main"
                            android:textStyle="bold"
                            android:text="00:00"
                            />

                        <cat.bcn.vincles.lib.widget.AkkuratTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            style="@style/TextDefault"
                            android:textSize="@dimen/text_size_main"
                            android:textStyle="bold"
                            android:text=" - "
                            />

                        <cat.bcn.vincles.lib.widget.AkkuratTextView
                            android:id="@+id/textimeTo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            style="@style/TextDefault"
                            android:textSize="@dimen/text_size_main"
                            android:textStyle="bold"
                            android:text="00:00"
                            />

                        <cat.bcn.vincles.lib.widget.AkkuratTextView
                            android:id="@+id/texStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/padding_large"
                            android:gravity="center_vertical"
                            style="@style/TextDefault"
                            android:textSize="@dimen/text_size_main"
                            android:textColor="@color/red"
                            android:text="status"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_large"
                        >

                        <cat.bcn.vincles.lib.widget.AkkuratTextView
                            android:id="@+id/texMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            style="@style/TextDefault"
                            android:textSize="@dimen/text_size_main"
                            android:textStyle="bold"
                            android:text="message"
                            android:maxLines="3"
                            android:ellipsize="end"
                            />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/item_message_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user"
                        android:scaleType="fitStart"
                        android:visibility="gone"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_message_photo_layout_mine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:id="@+id/texName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/padding_large"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp"
                    style="@style/TextDefault"
                    android:textStyle="bold"
                    android:text="Name"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="@dimen/agenda_image_width"
                    android:layout_height="@dimen/agenda_image_width"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/fondo_claro"
                    android:src="@drawable/user"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_marginRight="@dimen/padding_small"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>