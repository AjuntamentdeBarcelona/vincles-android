<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_background_list"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small"
    android:layout_marginTop="@dimen/padding_medium"
    android:layout_marginBottom="@dimen/padding_medium"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_group_photo"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/fondo_claro"
        android:src="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/padding_medium"
        android:layout_width="90dp"
        android:layout_height="90dp"
        />

    <TextView
        android:id="@+id/item_group_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/btnEnter"
        android:layout_toRightOf="@+id/item_group_photo"
        style="@style/TextDefault"
        android:textSize="@dimen/text_size_main"
        android:textStyle="bold"
        android:text="@string/task_message_notread"
        />

    <LinearLayout
        android:id="@+id/btnEnter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:orientation="horizontal"
        style="?my_button_red"
        android:gravity="center_vertical|center_horizontal"
        >
        <cat.bcn.vincles.lib.widget.AkkuratTextView
            style="@style/button_main_text"
            android:text="Entrar"
            />
    </LinearLayout>

</RelativeLayout>