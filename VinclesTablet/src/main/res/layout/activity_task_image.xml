<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
   >

    <fragment
        android:id="@+id/menuOperation"
        android:name="cat.bcn.vincles.tablet.fragment.MenuOperationFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout="@layout/menu_operation_fragment" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/relImageInfo"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUser"
                android:src="@drawable/user"
                app:civ_border_width="3dp"
                app:civ_border_color="?android:textColorSecondary"
                android:layout_margin="@dimen/padding_medium"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgUser"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/texUserName"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="User"
                    />

                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="16 junio 2016"
                    android:id="@+id/texDate"
                   />
            </LinearLayout>
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1 de 23"
                android:id="@+id/textList"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_medium"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                android:id="@+id/video" />
            <cat.bcn.vincles.lib.widget.TintableImageView
                android:id="@+id/imgPlay"
                android:src="@drawable/play"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                android:tint="@color/white"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                android:id="@+id/imgPhoto" />
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:text="@string/task_gallery_empty"
                android:id="@+id/texError"
                android:gravity="center"
                android:visibility="visible"
                />
            <ProgressBar
                android:id="@+id/prog_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_network_button_heigh"
            android:layout_margin="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:id="@+id/linShareAndDelete"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:onClick="deleteImage"
                android:id="@+id/remove"
                style="?my_button_black"
                >
                <cat.bcn.vincles.lib.widget.TintableImageView
                    android:layout_width="@dimen/configure_button_confirm_imagesize"
                    android:layout_height="@dimen/task_network_button_heigh"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/ic_borrar_24dp"
                    />
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button_remove"
                    android:paddingLeft="@dimen/padding_medium"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_main"
                    android:textAllCaps="false"
                    android:text="@string/task_gallery_button_remove_image"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginLeft="@dimen/padding_xlarge"
                android:onClick="shareImage"
                android:id="@+id/share"
                style="?my_button_red"
                >
                <cat.bcn.vincles.lib.widget.TintableImageView
                    android:layout_width="@dimen/configure_button_confirm_imagesize"
                    android:layout_height="@dimen/task_network_button_heigh"
                    android:tint="@color/white"
                    android:padding="@dimen/padding_medium"
                    android:src="@drawable/ic_compartir"
                    />
                <cat.bcn.vincles.lib.widget.AkkuratTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/padding_xlarge"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_main"
                    android:textAllCaps="false"
                    android:text="Compartir"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/menu_button_size"
        android:layout_height="match_parent"
        android:id="@+id/layout_texto_up_down"
        android:padding="@dimen/padding_small"
        android:background="?android:textColorSecondary"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_take"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="takePhoto"
            android:background="@drawable/my_btn_rojo"
            android:padding="@dimen/padding_small"

            >
            <cat.bcn.vincles.lib.widget.TintableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fotos_xx_dp"
                android:tint="@color/white"
                android:clickable="false"
                />
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:paddingTop="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="false"
                android:text="@string/task_gallery_new_photo"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_prev"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_small"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="previousImage"
            android:background="@drawable/my_btn_gris"
            android:padding="@dimen/padding_small"

            >
            <cat.bcn.vincles.lib.widget.TintableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_flecha_up"
                android:tint="@color/white"
                android:clickable="false"
                />
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:paddingTop="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="false"
                android:text="@string/task_gallery_prev"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_next"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding_small"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="nextImage"
            android:background="@drawable/my_btn_gris"
            android:padding="@dimen/padding_small"
            >
            <cat.bcn.vincles.lib.widget.AkkuratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="false"
                android:text="@string/task_gallery_next"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                />
            <cat.bcn.vincles.lib.widget.TintableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:paddingTop="@dimen/padding_small"
                android:src="@drawable/icon_flecha_down"
                android:clickable="false"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>