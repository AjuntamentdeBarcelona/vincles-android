<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/menuConfiguration7"
        android:name="cat.bcn.vincles.tablet.fragment.MenuConfigurationFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout="@layout/menu_configuration_fragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:id="@+id/config_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            android:clickable="false"
            android:paddingLeft="@dimen/padding_xlarge"
            >
            <Button
                android:layout_width="@dimen/configure_number_size"
                android:layout_height="@dimen/configure_number_size"
                android:background="@drawable/button_round"
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="5"
                android:clickable="false"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_medium"
                android:gravity="center"
                android:text="@string/task_config_volume_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_config_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/config_confirm_layer"
            android:orientation="vertical"
            android:layout_below="@+id/config_title"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="@dimen/configure_volume_image_size"
                    android:layout_height="@dimen/configure_volume_image_size"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_circle_dark"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/volumeImage"
                    android:layout_width="@dimen/configure_volume_image_size"
                    android:layout_height="@dimen/configure_volume_image_size"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_volume"
                    android:padding="@dimen/configure_volume_image_padding"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="@dimen/configure_name_edittext_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:paddingEnd="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingStart="30dp"
                android:paddingTop="@dimen/padding_large"
                android:progressDrawable="@drawable/seekbar_progress"
                android:splitTrack="false"
                android:thumb="@drawable/seekbar_thumb" />

            <RelativeLayout
                android:layout_width="@dimen/configure_name_edittext_width"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:paddingStart="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_volume" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_volume_alto" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/config_confirm_layer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/configure_button_confirm_heigh"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="@dimen/configure_button_confirm_width"
                android:layout_height="match_parent"
                android:background="@drawable/my_btn_rojo"
                android:text="@string/confirm"
                android:onClick="confirm"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_main"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/padding_small"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>