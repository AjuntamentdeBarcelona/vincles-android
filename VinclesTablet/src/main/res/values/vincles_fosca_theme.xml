<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VinclesFoscaTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/fondo_oscuro</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:buttonStyle">@style/fosca_button</item>-->
        <item name="bg_panel_color">@color/fondo_panel_oscuro</item>
        <item name="button1">@style/fosca_button</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="micColor">@color/white</item>
        <item name="micBackground">@color/gray</item>
        <item name="bg_panel">@style/fosca_panel_layout</item>
        <item name="my_button_red">@style/fosca_my_button_red</item>
        <item name="my_button_black">@style/fosca_my_button_black</item>
        <item name="my_button_grey">@style/fosca_my_button_grey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="video_view">@style/video_fosca</item>
        <item name="tint_reloj">@style/tint_gris</item>
        <item name="bar_title">@color/black</item>
        <item name="android:alertDialogStyle">@style/foscaDialog</item>
    </style>

    <style name="foscaDialog" parent="DialogCustomTheme">
        <item name="android:titleTextStyle">@style/foscaDialogWindowTitle</item>
        <item name="android:bottomBright">@color/white</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
        <item name="android:fullBright">@color/white</item>
        <item name="android:fullDark">@color/white</item>
        <item name="android:topBright">@color/white</item>
        <item name="android:topDark">@color/white</item>
    </style>

    <style name="foscaDialogWindowTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fosca_button" parent="@android:style/Widget.Button">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="fosca_panel_layout">
        <item name="android:background">@drawable/bg_panel_oscuro</item>
    </style>

    <style name="video_fosca">
        <item name="android:background">@color/fondo_oscuro</item>
    </style>

    <style name="fosca_my_button_red">
        <item name="android:background">@drawable/my_btn_rojo</item>
    </style>

    <style name="fosca_my_button_black">
        <item name="android:background">@drawable/my_btn_negro</item>
    </style>

    <style name="fosca_my_button_grey">
        <item name="android:background">@drawable/my_btn_gris</item>
    </style>
    <style name="tint_gris">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="fosca_color_text">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>