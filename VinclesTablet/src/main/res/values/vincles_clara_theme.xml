<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VinclesClaraTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/fondo_claro</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:buttonStyle">@style/clara_button</item>-->
        <item name="bg_panel_color">@color/fondo_panel_claro</item>
        <item name="button1">@style/clara_button</item>
        <item name="bg_panel">@style/clara_panel_layout</item>
        <item name="android:textColorSecondary">@color/fondo_panel_claro</item>
        <item name="micColor">@color/red</item>
        <item name="micBackground">@color/lightgray</item>
        <item name="my_button_red">@style/clara_my_button_red</item>
        <item name="my_button_black">@style/clara_my_button_black</item>
        <item name="my_button_grey">@style/clara_my_button_grey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="video_view">@style/video_clara</item>
        <item name="tint_reloj">@style/tint_rojo</item>
        <item name="bar_title">@color/black</item>
        <!--<item name="android:alertDialogStyle">@style/claraDialog</item>-->
    </style>

    <style name="claraDialog" parent="DialogCustomTheme">
        <item name="android:titleTextStyle">@style/claraDialogWindowTitle</item>
    </style>

    <style name="claraDialogWindowTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="clara_button" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="clara_panel_layout">
        <item name="android:background">@drawable/bg_panel_claro</item>
    </style>

    <style name="micColor_clara">
        <item name="android:background">@color/red</item>
    </style>

    <style name="micBackground_clara">
        <item name="android:background">@color/fondo_claro</item>
    </style>

    <style name="video_clara">
        <item name="android:background">@color/fondo_claro</item>
    </style>

    <style name="clara_my_button_red">
        <item name="android:background">@drawable/my_btn_rojo</item>
    </style>

    <style name="clara_my_button_black">
        <item name="android:background">@drawable/my_btn_negro</item>
    </style>

    <style name="clara_my_button_grey">
        <item name="android:background">@drawable/my_btn_gris</item>
    </style>
    <style name="tint_rojo">
        <item name="android:tint">@color/red</item>
    </style>

    <style name="clara_color_text">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>